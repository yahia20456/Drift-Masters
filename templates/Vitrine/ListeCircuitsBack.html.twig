{% extends 'base-back.html.twig' %}
{% block Content %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Liste des circuits</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                               href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="#">Circuits</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Liste des circuits</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="tabbable-line">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">List
                                    View</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active fontawesome-demo" id="tab1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card card-box">
                                            <div class="card-head">
                                                <header>Tous les circuits</header>
                                                <div class="tools">
                                                    <a class="fa fa-repeat btn-color box-refresh"
                                                       href="javascript:;"></a>
                                                    <a class="t-collapse btn-color fa fa-chevron-down"
                                                       href="javascript:;"></a>
                                                    <a class="t-close btn-color fa fa-times"
                                                       href="javascript:;"></a>
                                                </div>
                                            </div>
                                            <div class="card-body ">
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6 col-6">
                                                        <div class="btn-group">
                                                            <a href="{{ path('circuit_new') }}" id="addRow"
                                                               class="btn btn-info">
                                                                Add New <i class="fa fa-plus"></i>
                                                            </a>
                                                            <a href="{{ path('circuit_Id') }}" id="addRow"
                                                               class="btn btn-info">
                                                                Trier Par Id <i class="fa fa-plus"></i>
                                                            </a>
                                                            <a href="{{ path('circuit_Trilongueur') }}" id="addRow"
                                                               class="btn btn-info">
                                                                Trier par longueur <i class="fa fa-plus"></i>
                                                            </a>
                                                            <a href="{{ path('Circuit_Pdf') }}" id="addRow"

                                                               class="btn btn-info">
                                                                Imprimer <i class="fa fa-plus"></i>
                                                            </a>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="table-scrollable">
                                                    <table
                                                            class="table table-striped table-bordered table-hover table-checkable order-column valign-middle"
                                                            id="example4">
                                                        <thead>
                                                        <tr>

                                                            <th> Id </th>
                                                            <th> Nom </th>
                                                            <th> Proprietaire </th>
                                                            <th> Longueur </th>
                                                            <th> Revetement </th>
                                                            <th> Date de construction</th>
                                                            <th> Action </th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for circuit in circuits %}
                                                        <tr>

                                                            <td class="left">{{ circuit.id }}</td>
                                                            <td>{{ circuit.nomDuCircuit }}</td>
                                                            <td class="left">{{ circuit.proprietairecircuit }}</td>
                                                            <td>{{ circuit.longeurcircuit }}</td>

                                                            <td>{{ circuit.revetement }}</td>
                                                            <td class="left">{{ circuit.dateconstructionc }}</td>
                                                            <td>
                                                                <a href="{{ path('circuit_edit', {'id': circuit.id}) }}"
                                                                   class="btn btn-primary btn-xs">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>

                                                                <form method="post" id="DeleteForm" action="{{ path('circuit_delete', {'id': circuit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ circuit.id) }}">
                                                                    <button class="btn btn-danger btn-xs">
                                                                        <i class="fa fa-trash-o "></i>
                                                                    </button>

                                                                </form>

                                                            </td>
                                                        </tr {% endfor %}>



                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}